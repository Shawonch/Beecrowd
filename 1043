#include<stdio.h>
#include<math.h>
int main()
{
    double a,b,c,p,t;

    scanf("%lf%lf%lf",&a,&b,&c);

    p = a+b+c;

    if((a+b)>c && (b+c)>a && (a+c)>b)

    {
        printf("Perimetro = %.1lf\n",p);
    }

    else

    {
        t = ((a+b)*c)/2.0;

        printf("Area = %.1lf\n",t);

    }
    return 0;
}
